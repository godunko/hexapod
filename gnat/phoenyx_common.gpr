abstract project Phoenyx_Common is

   Target := Project'Target;

   for Object_Dir use "../.objs/" & Target & "/";

   package Compiler is
      for Switches ("Ada")
        use ("-g", "-gnat2022", "-gnatW8", "-O1", "-ffunction-sections", "-fdata-sections", "-flto");
   end Compiler;

end Phoenyx_Common;
